@model ShiphrahAndPuahMBS.Models.HelpSeeker

@{
    ViewData["Title"] = "New Help Seeker Form";
}

Our wishes in the precious name of our Lord and Saviour Jesus Christ. This small initiative is aimed at supporting the Missionaries & their immediate family members on their Medical needs.
<hr />

@{
  <label  class="control-label" style="color:red">@ViewBag.file
                         </label>  
}

  
<div class="container" >  
    <div class="row">

             <div class="col-sm-8" style="padding:0px">

              <div class="panel panel-primary">  
                <div class="panel-heading">  
                <h3 class="panel-title"><strong>New Help Seeker Details</strong></h3>  
                </div>  


            <div class="panel-body">  
                    <form asp-action="newHelpRequest" enctype="multipart/form-data" >
     
                     <div class="row col-sm-8" >
        
                        <label  class="control-label" style="color:red">@ViewBag.result 
                         </label>
       
       
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
                         <div class="form-group" style="padding:5px" >
               
           
                             <label  class="control-label col-sm-12" style="padding:5px;">Full Name</label>
                            <div >
                              <input asp-for="Full_Name" class="form-control" />
                             <span asp-validation-for="Full_Name" class="text-danger"></span> 
                            </div>
                        </div>
              
           
            
      

       
            <div class="form-group" style="padding:5px">
                <label class="control-label col-sm-12"  style="padding:5px;">Organization Name</label>
                 <div class="col-sm-8">
                <input asp-for="Organization_Name" class="form-control" />
                <span asp-validation-for="Organization_Name" class="text-danger"></span>   </div>
            </div>
       

       
            <div class="form-group" style="padding:10px" >
                <label class="control-label col-sm-12" style="padding:5px;">Employee ID</label>
                 <div class="col-sm-8">
                <input asp-for="Employee_ID" class="form-control" />
                <span asp-validation-for="Employee_ID" class="text-danger"></span>   </div>
            </div>
        
        
            <div class="form-group" style="padding:10px" >
                <label  class="control-label col-sm-12"  style="padding:5px;">Upload Employee ID (PDF/Any Image file)</label>
                 <div class="col-sm-8">
                <input type="file" asp-for="Employee_IDImageOrPDF" accept=".png, .gif, .jpeg, .pdf" />

                <span asp-validation-for="Employee_IDImageOrPDF" class="text-danger"></span>  </div>
            </div>
        

        
            <div class="form-group" style="padding:10px" >
                <label class="control-label col-sm-12"  style="padding:5px;">Mobile Number</label>
                 <div class="col-sm-8">
                <input asp-for="MobileNumber" type="number" class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>  </div>
            </div>
       

        
            <div class="form-group" style="padding:10px" >
                <label class="control-label col-sm-12"  style="padding:5px;">Residential Location (Only the City/Town-Address not required )
                    </label>
                    <div class="col-sm-8">
                <input asp-for="Residential_Location" class="form-control" />
                <span asp-validation-for="Residential_Location" class="text-danger"></span>  </div>
            </div>
       
        
            <div class="form-group" style="padding:10px" >
                <label class="control-label col-sm-12"  style="padding:5px;">Pls share in few words about the Medical Ailment and support required
                </label> 
                <div class="col-sm-8">
                <input asp-for="Support_Required" class="form-control" />
                <span asp-validation-for="Support_Required" class="text-danger"></span>
                </div>
            </div>
       

        
            <div class="form-group" style="padding:10px" >
                <label class="control-label col-sm-12"  style="padding:5px;">Medical Bill Total Amount</label>
                <div class="col-sm-8">
                <input asp-for="Medical_BillAmount" class="form-control" />
                <span asp-validation-for="Medical_BillAmount" class="text-danger"></span> 
                </div>
            </div>

       

       
            <div class="form-group" style="padding:10px" >

                <label asp-for="Doctor_PrescriptionImageOrPDF" class="control-label col-sm-12"  style="padding:5px;">Upload Doctors Prescription(PDF/any image file)</label> 
                 <div class="col-sm-8">
                <input asp-for="Doctor_PrescriptionImageOrPDF" type="file" accept=".png, .gif, .jpeg, .pdf"  />
                <span asp-validation-for="Doctor_PrescriptionImageOrPDF" class="text-danger"></span>  </div>
            </div>
        

       
            <div class="form-group" style="padding:10px" >
                <label asp-for="Medical_BillImageOrPDF" class="control-label col-sm-12" style="padding:5px;">Upload the Medical Bill(PDF/any image file)
                    </label> <div class="col-sm-8">
                <input asp-for="Medical_BillImageOrPDF" type="file" accept=".png, .gif, .jpeg, .pdf"  />
                <span asp-validation-for="Medical_BillImageOrPDF" class="text-danger"></span>   </div>
            </div>


            <div class="form-group" style="padding:10px" >
               <div class="panel panel-primary">
                 <div class="panel-heading">Bank Details</div>
                 <div class="panel-body">
                      <div class="form-group" style="padding:10px" >
                        <label asp-for="Bank_Name" class="control-label col-sm-12" style="padding:5px;">Name</label> 
                          <div class="col-sm-8">
                            <input asp-for="Bank_Name" type="text" accept=".png, .gif, .jpeg, .pdf"  />
                            <span asp-validation-for="Bank_Name" class="text-danger"></span>   </div>


                            <label asp-for="Bank_IFSCCode" class="control-label col-sm-12" style="padding:5px;">IFSC Code</label> 
                          <div class="col-sm-8">
                            <input asp-for="Bank_IFSCCode" type="text" accept=".png, .gif, .jpeg, .pdf"  />
                            <span asp-validation-for="Bank_IFSCCode" class="text-danger"></span>   </div>

                            <label asp-for="Bank_AccountNumber" class="control-label col-sm-12" style="padding:5px;">Account Number</label> 
                          <div class="col-sm-8">
                            <input asp-for="Bank_AccountNumber" type="text" accept=".png, .gif, .jpeg, .pdf"  />
                            <span asp-validation-for="Bank_AccountNumber" class="text-danger"></span>   </div>
                      </div>


                 </div>
            </div>
            </div>
            


           
            <div class="form-group" style="padding:10px" >
                <label asp-for="Medical_AmountSanctioned" class="control-label col-sm-12"  style="padding:5px;">Amount Sanctioned  (Official Updation only)</label>
                 <div class="col-sm-8">
                <input asp-for="Medical_AmountSanctioned" class="form-control" />
                <span asp-validation-for="Medical_AmountSanctioned" class="text-danger"></span>
                </div>

                <div class="col-sm-8" style="padding:10px">
                <input type="submit" value="Submit" class="btn btn-primary" asp-action="newHelpRequest" onclick="fileValidation()"/>
            </div>
            </div>
 

            
            
           </div>
          
       </form>      
       
    </div>
</div>
</div>  
